{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
  },
  "ts-node": {
    "esm": true
  }
}
